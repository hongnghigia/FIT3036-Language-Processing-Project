<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="14dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="14dp"
    tools:context="com.example.aaron.fit3036_project.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/scene_row1"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/scene_frame1"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:id="@+id/imageView"
                android:layout_gravity="center_vertical"
                android:src="@drawable/scene1small"
                android:scaleType="fitCenter"
                android:maxWidth="160dp"
                android:maxHeight="90dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/scene_frame2"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/scene2small"
                android:scaleType="fitCenter"
                android:maxWidth="160dp"
                android:maxHeight="90dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scene_row2"
        android:layout_below="@id/scene_row1"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/scene_frame3"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:id="@+id/imageView3"
                android:src="@drawable/scene3small"
                android:scaleType="fitCenter"
                android:maxWidth="160dp"
                android:maxHeight="90dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/scene_frame4"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:adjustViewBounds="true"
                android:id="@+id/imageView4"
                android:src="@drawable/scene4small"
                android:scaleType="fitCenter"
                android:maxWidth="160dp"
                android:maxHeight="90dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
